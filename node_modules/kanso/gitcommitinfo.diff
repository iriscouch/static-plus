+/**
+ * Gets the current commit info
+ */
+
+exports.getGitCommit = function (path, callback) {
+    exec('git rev-parse HEAD', {cwd: path}, function (err, stdout, stderr) {
+        if (err) {
+            if (err.code === 128) {
+                // not a git repository
+                return callback(null, null);
+            }
+            return callback(err);
+        }
+        callback(null, stdout.toString());
+    });
